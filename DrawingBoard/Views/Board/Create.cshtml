@model DrawingBoard.Models.Board

@{
    ViewData["Title"] = "Create Board";
}



@using (Html.BeginForm("Create", "Board", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="create-container">
        <h2>Create Board</h2>
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width:100%">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="d-flex justify-content-between" style="margin-top: 20px;">
            <div >
                <input type="submit" value="Create" class="btn btn-create btn-block" />
            </div>

            <div>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}


